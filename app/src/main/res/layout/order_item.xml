<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderId"
        android:text="订单号:2017071510004808341108"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderState"
        android:text="订单成功"
        android:layout_below="@+id/text_orderId"
        android:layout_toRightOf="@+id/text_orderSum"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderAmount"
        android:text="总金额：20"
        android:layout_below="@+id/text_orderId"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderSum"
        android:text="数量：20"
        android:layout_below="@+id/text_orderId"
        android:layout_toRightOf="@+id/text_orderAmount"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderGoodtype"
        android:text="DNF点卷"
        android:layout_toRightOf="@+id/text_orderId"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_orderAcount"
        android:text="充值账号：350959349"
        android:layout_below="@+id/text_orderSum"
        />
</RelativeLayout>